imgPath = '../../images/'
@import 'nib'
// @import 'dev/css/fontello.css'

global-reset()

verticalAlign()
  position relative
  top 50%
  transform translateY(-50%)


replaceImage(image_name, extention=png)
  image = imgPath + image_name + '.' + extention
  image2x = imgPath + image_name + '@2x.' + extention
  background: url(image) no-repeat center center
  background-size: image-size(image)
  width: image-size(image)[0]
  height: image-size(image)[1]
  hide-text()
  @media all and (-webkit-min-device-pixel-ratio : 1.5), all and (min-device-width: 768px) and (max-device-width: 1024px)
    background url(image2x) no-repeat center center
    background-size image-size(image)
    width image-size(image)[0]
    height image-size(image)[1]
    hide-text()

replaceImageNotRetina(image_name, extention=png)
  image = imgPath + image_name + '.' + extention
  image2x = imgPath + image_name + '@2x.' + extention
  background: url(image) no-repeat center center
  background-size: image-size(image)
  width: image-size(image)[0]
  height: image-size(image)[1]
  hide-text()


@import 'ColorAndType.styl'
span.bg
  background rgba(blackDark, 0.7)

.bold
  font-weight: bold

html
  width auto
  height auto

body
  background gray
  display block

#wrapper
  max-width 1440px
  width 80%
  display block
  // text-align center
  margin 0 auto

#world
  margin 0 auto
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index -1

header
  height 100%
  position relative
  z-index 10
  margin 5% 0
  h1
    width 100%
    img
      min-width 200px
      display block
      width 40%
      height auto
      margin 0 auto
      text-align center

section
  margin 0 0 5% 0

section#youtube
  z-index 101
  position relative
  .embed-container
    position relative
    padding-bottom 56.25%
    height 0
    overflow hidden
    max-width 100%
    iframe,
    object,
    embed
      position absolute
      top 0
      left 0
      width 100%
      height 100%

  iframe
    cursor pointer !important

#youtubeBg
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  display block
  background-color rgba(blackDark, 0.9)
  z-index -100
  visibility visible
  opacity 0
  transition all 0.3s cubic-bezier(.06,.33,0,1.07)
  &.on
    z-index 100
    opacity 1
  &.off
    z-index -100
    opacity 0

section#desc
  p
    font-size 0.7rem
    margin 0 0 0.4rem
  h2
    font-size 1.5rem
    display block
    margin 0 0 0.7rem 0
  h3
    margin 0 0 1.8rem 0
    font-size 1.2rem
    color yellow
  p#tracklist
    font-size 0.8rem
    margin 0 0 0.5rem 0


  ul
    font-size 1rem
    li
      margin 0 0 0.7rem 0

section#soundCloud
  h2
    font-size 1.5rem
    display block
    margin 0 0 1rem 0
  iframe
    margin 0 0 2% 0
  p
    font-size 1rem
    line-height 1.5rem
    &.author
      margin 0.5rem 0 0 0

section#links
  h2
    font-size 1.5rem
    display block
    margin 0 0 1rem 0
  li
    margin 0 0 0.7rem 0
  a
    font-size 1rem

footer
  margin 0 0 2% 0
  p
    text-align center
    font-size 0.8rem
    font-family HelveticaNeue, Helvetica, sans-serif
  #shareButtons
    text-align center
    margin 0 0 2% 0
    ul.share-buttons
      list-style: none
      padding: 0

  ul.share-buttons li
    display: inline
    margin 0 2%

@media only screen and (max-width:480px)
  #wrapper
    width: 90%
  section
    margin 0 0 30% 0
  section#desc
    h3
      font-size 1.4rem
      line-height 1.7rem
      margin 0 0 1.5rem 0
      span.small
        padding 0
